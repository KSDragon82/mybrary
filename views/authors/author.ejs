<h2><%= author.name %></h2>
<div>
    <a href="/authors/<%= author.id %>/edit">Edit</a>
    <%- include('../partials/_delete_form', { url: `/authors/${author.id}` }) %> 
</div>
<div>
    <% if (booksByAuthor.length > 0) { %>
        <h2>Books By Author</h2>
        <% booksByAuthor.forEach(book => { %>
            <a href="/books/<%= book.id %>">
                <img width="100" height="150" src="<%= book.coverImagePath %>" alt="Book Cover Image" />
            </a>
        <% }) %>
    <% } %> 
</div>