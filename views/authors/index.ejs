<h2>Search Authors</h2>
<form action="/authors">
    <label>
        Name<br>
        <input type="search" name="name" value="<%= searchOptions.name %>">
    </label>
    <button type="submit">Search</button>
</form>
<br>
<% authors.forEach(author => { %>
    <div><%= author.name %></div>
    <a href="/authors/<%= author.id %>">View</a>
    <a href="/authors/<%= author.id %>/edit">Edit</a>
    <%- include('../partials/_delete_form', { url: `/authors/${author.id}` }) %> 
<% }) %>